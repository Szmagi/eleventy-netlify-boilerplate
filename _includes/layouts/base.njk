        <li><a href="/kontakt">Kontakt</a></li>
        <li><a href="/promocje">Promocje</a></li>
      </ul>
    </nav>

    <main>
      {{ layoutContent | safe }}
    </main>

    {% include "components/footer.njk" %}
  </body>
</html>
