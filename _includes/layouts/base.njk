<!doctype html>
<html {% if section %} data-current="{{ section }}"{% endif %} lang="en">
  {% include "components/head.njk" %}
  <body>
    <header style="display: flex; align-items: center; justify-content: space-between; padding: 20px 40px; background: #d0d0d0; border-bottom: none;">
      <!-- logo -->
      <a href="{{ '/' | url }}" style="display: flex; align-items: center;">
        <img src="/static/logo.png" alt="Life is back - Anna Mach" style="height: 100px; object-fit: contain;">
      </a>
      
      <!-- Nawigacja -->
      <nav style="background-color: #d0d0d0;">
        {% include "components/nav.njk" %}
      </nav>
    </header>

    <main>
      {{ layoutContent | safe }}
    </main>

    {% include "components/footer.njk" %}
  </body>
</html>